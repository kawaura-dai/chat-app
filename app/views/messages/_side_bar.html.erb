<div class="side_up">
  <div class="side_up_left">
    <%= link_to edit_user_path(current_user) do %>
      <%= current_user.name %>
    <% end %>
  </div>
  <div class="side_up_right">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>

<div class="side_down">
  <% current_user.rooms.each do |room| %>
    <div class="room">
      <div class="room_name">
        <%= link_to room.name, room_messages_path(room) %>
      </div>
    </div>
  <% end %>
</div>