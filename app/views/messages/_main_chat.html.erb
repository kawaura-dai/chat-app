<div class="main_chat">
  <div class="left_header">
    <div class="main_up_room">
    hogefuga
  </div>
</div>
<div class="right_header">
  <div class="header_button">
    <div class="main_up_btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="message">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'main_footer', local: true do |f| %>
  <div class="main_footer_input">
    <%= f.text_field :content, class: 'main_footer_message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_footer_submit' %>
<% end %>