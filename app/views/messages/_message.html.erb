    <div class="message">
      <div class="main_chat_box">
        <div class="main_chat_name">
         <!-- 投稿したユーザー名情報を出力する -->
         <%= message.user.name %>
        </div>
        <div class="main_chat_time">
          <!-- 投稿した時刻を出力する -->
          <%= l message.created_at %>
        </div>
        </div>
        <div class="lower_message">
        <div class="main_chat_text">
         <!-- 投稿したメッセージ内容を記述する -->
         <%= message.content %>
        </div>
        <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
      </div>
    </div>
